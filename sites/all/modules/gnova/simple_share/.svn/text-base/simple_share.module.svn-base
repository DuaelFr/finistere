function get_simple_share_infos(){
  $modules = module_implements('simple_share_infos');
  $infos = array();
  foreach($modules as $module){
  		$function = $module.'_simple_share_infos';
  		$res = $function();
  		$infos = array_merge($infos, $res);
  }
  return $infos;
}

