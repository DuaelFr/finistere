/** mat.css **/

/* Css des pages de liste principales de contenus hierarchique */
.primary-hitem-list { margin-top:10px; }
.primary-hitem-list .views-row { margin-bottom: 10px; border:1px solid #E3E3E3; padding: 0;}
.primary-hitem-list .node-teaser:hover { background-color: #EDEDED; }
.primary-hitem-list .node-teaser { padding: 13px;   }
.primary-hitem-list .teaser-body { margin-bottom: 10px;font: bold 1em/16px Arial,Helvetica,sans-serif;}
.primary-hitem-list a, .primary-hitem-list a:visited { color:#4A4A4A; text-decoration: none;}
.primary-hitem-list a:hover { text-decoration: underline; color: #DD309E; }
.primary-hitem-list h2, #conteneur_left .primary-hitem-list h2 { padding-left:0; font-size: 1.4em;border: 0;margin-top:0;}
.primary-hitem-list .node-children .col { float:left; width: 45%;}
.primary-hitem-list .node-children .views-row { margin-bottom: 4px; margin-left:12px; border: none;background: url("../images/sprite.png") no-repeat scroll 0 -260px transparent; }

.primary-hitem-list .primlist-content-left { float:left; margin-right: 10px;}
.primary-hitem-list .primlist-content-right { float:left; width: 368px; } 

.primary-hitem-list .primlist-content-right { font-size:0.73em; } /* Dans style css pour ubox */
.primary-hitem-list .node-teaser img {border:4px solid #E0E0E0; }

/* css du node hqitem en page display */
.field-field-hqitem-pageimg { margin-left: -10px; }

/* css des listes d'enfants */
.views-row .node { clear: none; }
.node-children .view.ubox .ubox_items { width: auto; }
ul.links.inline, ul.links.inline li { padding:0; margin:0;}
.ubox_item_content div.links { font-size: inherit; }
a.browse:hover { text-decoration: none; }


