.experience{ min-height:303px;}

.experience .ubox_item .ubox_item_content{ bottom:13px;}

.experience .ubox_item h3 a, .img_1_2.ubox h3 a, .img_all.ubox h3 a{ font-size:0.8em;}

#carte_interactive{ background:#fff url(../images/carte_interactive.png) no-repeat bottom; height:331px; position:relative; float:left; margin:0 15px 20px 0;}

#conteneur_left .h2_spec{ border-bottom:1px dashed #FFF; padding:0;}

#conteneur_left .h2_spec a span{ color:#FFF; background-position:0 -469px; }

#carte_interactive #carte_lien{ font:0.88em/40px Arial, Helvetica, sans-serif; background:url(../images/sprite.png) no-repeat 0 -562px; color:#666; display:block; width:165px; height:42px; text-align:center; text-decoration:none; position:absolute; top:227px; right:4px;}

#carte_interactive #carte_lien:hover{ background-position:0 -607px;}

.box{  float:left; background-color:#ededed;}

.video #img_video{ border:4px solid #FFF; display:block; width:210px; margin:0 auto;}

.video h3, .video h4{ font:1.13em 'DaxCondensedRegular', Arial, Helvetica, sans-serif; text-transform:uppercase; color:#454545; margin-left:14px;}

.video h4{ font-size:0.88em; text-transform:none;}

.video div{ font:0.63em/16px Arial, Helvetica, sans-serif; color:#454545; margin-left:14px;}

.video #lien_video{ font:bold 0.63em Arial, Helvetica, sans-serif; color:#454545; display:block; margin:10px 0 32px 14px;}

.video iframe{ border:4px solid #FFF; max-width:218px;}

#conteneur_left .experience span{ color:#454545; background:url(../images/sprite.png) 0 -660px; color:#454545; margin-right:16px;}

#conteneur_doc_mobile{border-top:1px dashed #000; margin-top:20px; position:relative;}

#conteneur_doc_mobile h3 a{ font:1.19em 'NeoSansRegular', Arial, Helvetica, sans-serif; color:#000; letter-spacing:-1px; text-decoration:none;} 

#conteneur_doc_mobile .text_doc{ width:175px; float:left;}

#conteneur_doc_mobile .text_doc div{ font:0.75em Arial, Helvetica, sans-serif; color:#454545; margin:12px 0;}

#conteneur_doc_mobile #mobile .text_doc div{ margin:5px 0;}

#conteneur_doc_mobile .text_doc .lien{ font:bold 0.75em Arial, Helvetica, sans-serif; color:#454545;}

#conteneur_doc_mobile #mobile a{ text-decoration:none;}

#conteneur_doc_mobile #doc .text_doc .lien{ background:url(../images/sprite.png) no-repeat 0 -713px; padding-left:15px;}

#conteneur_doc_mobile .text_doc a:hover{ text-decoration:none;}

#conteneur_doc_mobile #doc, #conteneur_doc_mobile #mobile{ padding:18px 0 34px 15px; float:left; width:334px;}

#conteneur_doc_mobile #mobile{ position:relative; right:-10px;}

#conteneur_doc_mobile #doc img, #conteneur_doc_mobile #mobile img{ position:absolute; top:-10px;}

#conteneur_doc_mobile #mobile img{ top:-5px;}

/*===========================Style Slide========================*/
	
	.diaporama { height: 418px; position: absolute; width: 100%; top:0; }
	
	.diaporama li{ overflow:hidden; position:absolute; width:100%;}
	
	.diaporama li div{ position: absolute; text-align: right; font:2.50em 'DaxCondensedRegular', Arial, Helvetica, sans-serif; color:#FFF; top:250px; left:202px; text-shadow:3px 3px 5px #111; text-align:left; filter:progid:DXImageTransform.Microsoft.Shadow(color='#111111', Direction=135, Strength=5); 
  zoom: 1;}
	
	.diaporama li div span{ font-size:90px; display:block; margin-left:30px; }
	
	.diaporama li div strong{ font-family: 'DaxCondensedBold', Arial, Helvetica, sans-serif;}
	
	.diaporama_controls {clear: both; margin: 3px 0; overflow: hidden; padding: 5px; position: absolute; top: 0; right:12px; }
	
	.diaporama_controls .btns { float: right; }
	
	.diaporama_controls .prev { background: url(../images/sprite.png) no-repeat -69px 0 transparent; }
	
	.diaporama_controls .play { background: url(../images/sprite.png) no-repeat 3px 1px transparent; }
	
	.diaporama_controls .pause { background: url(../images/sprite.png) no-repeat -27px 1px transparent; }
	
	.diaporama_controls .next { background: url(../images/sprite.png) no-repeat -56px 0 transparent; }

	.diaporama_controls a { display: inline-block; font-weight: normal; height: 13px; margin: 0 3px;text-indent: -9999px; width: 10px; }
	
	
/*=======================Fin=Style Slide========================*/