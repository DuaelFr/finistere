#header{ position:relative; height:487px; margin: 0 auto; max-width: 1279px;}

#triskell{ background:url(../images/triskell.png) no-repeat; width:525px; height:338px; position:absolute; top:0;}

#conteneur_coup_de_coeur{ position:absolute; z-index:1; left:66.9%; bottom:80px; height:10px;}

#coup_de_coeur{ background:url(../images/sprite.png) no-repeat 0 -145px; width:286px; height: 70px; text-indent:-9999px; overflow:hidden; z-index:1; position:absolute; margin-left:1px; cursor:pointer; }

