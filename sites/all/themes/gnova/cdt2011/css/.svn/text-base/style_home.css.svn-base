.box_hidden #prix{font:bold 3.44em Arial, Helvetica, sans-serif; background:#999086 url(../images/prix.png) repeat-y right 0; color:#FFF; text-shadow:2px 4px 5px #777; position:absolute; bottom:40px; padding-left:9px; }

.box_hidden .row-item{margin:10px 0; background:url(../images/bg_text_cdc.png);}

